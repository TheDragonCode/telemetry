{
    "name": "dragon-code/telemetry",
    "description": "End-to-end telemetry of inter-service communication",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Andrey Helldar",
            "email": "helldar@dragon-code.pro"
        }
    ],
    "require": {
        "php": "^8.2",
        "ramsey/uuid": "^4.9",
        "symfony/http-foundation": "^7.3"
    },
    "require-dev": {
        "dragon-code/codestyler": "^6.3",
        "pestphp/pest": "^3.0 || ^4.0",
        "pestphp/pest-plugin-type-coverage": "^3.0 || ^4.0",
        "symfony/var-dumper": "^7.3"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "DragonCode\\Telemetry\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "laravel/pint": true,
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@php vendor/bin/codestyle pint 8.2 --ansi",
            "@php vendor/bin/codestyle editorconfig --ansi",
            "composer normalize --ansi"
        ],
        "style": "@php vendor/bin/pint",
        "test": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage",
        "test:type": "vendor/bin/pest --type-coverage --compact --min=95"
    }
}
